{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\lib\\dialogSchemaMain.js",
            "args":
            [
                "implementations/*.schema",
                "definitions/*.schema",
                "-o",
                "examples/app.schema"
            ],
            "cwd": "${workspaceFolder}/test",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "protocol": "inspector",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/../../node_modules/mocha/bin/_mocha",
            "args": [
                "-r",
                "../../node_modules/ts-node/register",
                "test/*.ts",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tom",
            "program": "${workspaceFolder}\\lib\\dialogSchemaMain.js",
            "args": [
                "components/**/*.schema",
                "-o",
                "app.schema"
            ],
            "cwd": "${workspaceFolder}/../../../botbuilder-dotnet/tests/Microsoft.Bot.Builder.TestBot.Json/Schemas",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch OBI",
            "program": "${workspaceFolder}\\lib\\dialogSchemaMain.js",
            "args": [
                "*.schema"
            ],
            "cwd": "${workspaceFolder}/../../../botframework-obi/fileformats/dialog/schema/schemas",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch dialogLint",
            "program": "${workspaceFolder}\\lib\\dialogSchemaMain.js",
            "args": [
                "*.schema",
                "-o",
                "../examples/app.schema"
            ],
            "cwd": "${workspaceFolder}/../dialogLint/test/schemas",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        }
    ]
}