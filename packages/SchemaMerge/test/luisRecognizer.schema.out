{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LUIS Recognizer",
    "description": "The root definition for components.",
    "$implements": [
        "IRecognizer"
    ],
    "type": "object",
    "required": [
        "type"
    ],
    "properties": {
        "$type": {
            "type": "string",
            "const": "Microsoft.LUISRecognizer"
        },
        "$id": {
            "type": "string"
        },
        "application": {
            "type": "object",
            "$comment": "We need a consistent way to handle keys.",
            "required": [
                "applicationId",
                "endpoint",
                "endpointKey"
            ],
            "properties": {
                "applicationId": {
                    "type": "string"
                },
                "endpoint": {
                    "type": "string"
                },
                "endpointKey": {
                    "type": "string"
                }
            }
        }
    }
}