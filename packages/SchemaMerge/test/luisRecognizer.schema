        {
            "$ref": "component.schema#"
        },
        {
            "properties": {
                "$type": {
                    "const": "Microsoft.LUISRecognizer"
                },
                "application": {
                    "type": "object",
                    "$comment": "We need a consistent way to handle keys.",
                    "properties": {
                        "applicationId": {
                            "type": "string"
                        },
                        "endpoint": {
                            "type": "string"
                        },
                        "endpointKey": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "applicationId",
                        "endpoint",
                        "endpointKey"
                    ]
                },
                "priority": {
                    "$ref": "#definitions/local"
                }
            }
        }
    ]
