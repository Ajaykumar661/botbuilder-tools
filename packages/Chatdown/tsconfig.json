{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./",
    "target": "esnext",
    "module": "none",
    "lib": ["es6", "es2015", "esnext"],
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  "include": [
    "./src/bin",
    "./src/lib"
  ],
  "exclude": [
    "./test/**/*",
    "./**/*.spec.ts",
    "./**/*.test.ts",
    "**/node_modules"
  ]
}
