<?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="Microsoft.Bot.Builder"
           xmlns="Microsoft.Bot.Builder"
           xmlns:bl="http://botframework.com/botloader"
           >
    <xs:include schemaLocation="component.xsd"/>
    <xs:element name="RegexRecognizer" bl:implements="IRecognizer, IComponent">
        <xs:complexType>
            <xs:complexContent>
                <!-- Extend the base component definition. -->
                <xs:extension base="component">
                    <xs:attribute name="pattern" type="xs:string"/>
                </xs:extension>
            </xs:complexContent>
        </xs:complexType>
    </xs:element>
</xs:schema>
