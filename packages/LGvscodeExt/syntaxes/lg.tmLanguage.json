{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LG",
	"patterns": [
		{"include": "#template_name_line"},
		{"include": "#comments"},
		{"include": "#imports"},
		{"include": "#fence_block"},
		{"include": "#template_body"}
	],
	"repository": {
		"comments": {
			"begin": "^\\s*>",
			"end":"\n",
			"name":"comment.line.keywords"
		},
		"imports": {
			"captures": {
				"1": {
					"name": "string.other.link.title.lg"
				},
				"2": {
					"name": "markup.underline.link.lg"
				}
			},
			"match": "\\[([\\w\\W]+?)\\]\\(([\\w\\W]+?)\\)",
			"name": "meta.link.reference.def.lg"
		},
		"fence_block": {
			"begin": "(^-)(\\s*)(`{3})\\s*",
			"beginCaptures": {
				"3": {
					"name": "punctuation.definition.lg"
				}
			},
			"end": "(^)(\\2|\\s{0,3})(\\3)\\s*$",
			"endCaptures": {
				"3": {
					"name": "punctuation.definition.lg"
				}
			},
			"name": "constant.character.escape.multiline",
			"patterns": [
				{
					"include": "#expression"
				},
				{
					"include": "#inline_string"
				}]
		},
		"expression": {
			"name": "entity.name.function.expression",
			"match": "(?<=\\{).*?(?=\\})"
		},
		"inline_string": {
			"match": "(\").+?(\")",
			"name":"string.quoted.double.lg"
		},
		"template_ref": {
			"match": "\\[(.*?)(\\(.*?(\\[.+\\])?\\))?\\]",
			"captures": {
				"1": {
					"name": "entity.name.function.functionName"
				},
				"2": {
					"name": "variable.parameter.parameters"
				}
			}
		},
		"keyword": {
			"name": "keyword.control.keyword",
			"match": "(?i)(IF|ELSE|ELSEIF|SWITCH|CASE|DEFAULT)\\s*:"
		},
		"template_name_line":{
			"match": "^(#)\\s+([\\w\\d\\-_\\.]+)(\\(([\\w\\d\\-_\\.]+,\\s*)*([\\w\\d\\-_\\.]+)\\))?",
			"captures": {
				"2": {
					"name": "entity.name.function.functionName"
				},
				"3": {
					"name": "variable.parameter.parameters"
				}
			},
			"name":"markup.heading.lg"
		},
		"template_body": {
			"begin":"^\\s*-",
			"end":"\n",
			"patterns": [
				{"include": "#template_ref"},
				{"include": "#expression"},
				{"include": "#keyword"}
			]
		}
	},
	"scopeName": "source.lg"
}