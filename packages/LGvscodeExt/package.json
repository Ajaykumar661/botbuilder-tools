{
    "name": "lg-language",
    "displayName": "LG language",
    "description": "lg file",
    "version": "0.1.1",
    "publisher": "bot-framework",
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Other"
    ],
    "contributes": {
        "commands": [
            {
                "command": "lgLivingTest.start",
                "title": "Start LG debug",
                "category": "LG Living Test"
            }
        ],
        "languages": [
            {
                "id": "lg",
                "aliases": [
                    "LG",
                    "lg"
                ],
                "extensions": [
                    ".lg"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lg",
                "scopeName": "source.lg",
                "path": "./syntaxes/lg.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lg",
                "path": "./snippets/lg.json"
            }
        ]
    },
    "activationEvents": [
        "onCommand:lgLivingTest.start",
        "onWebviewPanel:lgLivingTest",
        "*"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "botbuilder-lg": "https://botbuilder.myget.org/F/botbuilder-declarative/npm/botbuilder-lg/-/4.5.1.tgz"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.11.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.18"
    }
}
