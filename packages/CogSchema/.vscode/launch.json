    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\lib\\cogSchema.js",
            "args":
            [
                "implementations/*.schema",
                "definitions/*.schema",
                "-o",
                "examples/app.schema"
            ],
            "cwd": "${workspaceFolder}/test",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tom",
            "program": "${workspaceFolder}\\lib\\cogSchema.js",
            "args": [
                "components/**/*.schema",
                "-o",
                "app.schema"
            ],
            "cwd": "${workspaceFolder}/../../../botbuilder-dotnet/tests/Microsoft.Bot.Builder.TestBot.Json/Schemas",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch OBI",
            "program": "${workspaceFolder}\\lib\\cogSchema.js",
            "args": [
                "**/*.schema",
                "-o",
                "app.schema"
            ],
            "cwd": "${workspaceFolder}/../../../botframework-obi/schema/examples",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch cogLint",
            "program": "${workspaceFolder}\\lib\\cogSchema.js",
            "args": [
                "*.schema",
                "-o",
                "../examples/app.schema"
            ],
            "cwd": "${workspaceFolder}/../cogLint/test/schemas",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ]
        }
    ]
}